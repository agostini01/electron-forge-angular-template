{
  "name": "learn-atelier",
  "version": "1.0.0",
  "description": "Locally Executed Assistants for Research Navigation",
  "author": {
    "name": "Nicolas Agostini"
  },
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "scripts": {
    "ng": "ng",
    "build-learn-atelier": "ng build",
    "build-electron": "tsc --project projects/electron/tsconfig.json",
    "wait-for-serve-learn-atelier": "wait-on http://localhost:4200",
    "watch-learn-atelier": "ng build --watch --configuration development",
    "serve-learn-atelier": "ng serve learn-atelier",
    "start": "concurrently \"yarn build-electron\" \"yarn serve-learn-atelier\" \"yarn wait-for-serve-learn-atelier && electron-forge start\"",
    "test": "ng test",
    "package": "yarn build-electron && yarn build-learn-atelier && electron-forge package",
    "make": "yarn build-electron && yarn build-learn-atelier && electron-forge make",
    "publish-app": "yarn build-electron && yarn build-learn-atelier && electron-forge publish"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.1.0",
    "@angular/common": "^17.1.0",
    "@angular/compiler": "^17.1.0",
    "@angular/core": "^17.1.0",
    "@angular/forms": "^17.1.0",
    "@angular/platform-browser": "^17.1.0",
    "@angular/platform-browser-dynamic": "^17.1.0",
    "@angular/router": "^17.1.0",
    "electron-squirrel-startup": "^1.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.2",
    "@angular/cli": "^17.1.2",
    "@angular/compiler-cli": "^17.1.0",
    "@electron-forge/cli": "^7.2.0",
    "@electron-forge/maker-deb": "^7.2.0",
    "@electron-forge/maker-rpm": "^7.2.0",
    "@electron-forge/maker-squirrel": "^7.2.0",
    "@electron-forge/maker-zip": "^7.2.0",
    "@electron-forge/plugin-auto-unpack-natives": "^7.2.0",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^8.2.2",
    "electron": "^28.2.1",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typescript": "~5.3.2",
    "wait-on": "^7.2.0"
  }
}
